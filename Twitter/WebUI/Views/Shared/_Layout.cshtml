            <li>@Html.ActionLink("All Users", "All", "People")</li>
            <li>@Html.ActionLink("Newsfeed", "Newsfeed", "Tweet")</li>
        </ul>

        @Html.Partial("~/Views/Shared/CurrentUserAndLogOut.cshtml", (HttpContext.Current.Session["CurrentUser"] as Models.UserViewModel) )
