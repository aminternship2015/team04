@model List<Models.TweetViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
</head>
<body>
    <h3>User information:</h3>
    @Html.Partial("UserInfo", (Models.UserViewModel)ViewBag.UserInfo)
    <br />

    <hr />
    <h3>User tweets:</h3>

    <div>
        @foreach (var item in Model)
        {
            @item.Body <br />
            @item.DateAdded <br />
            if (ViewBag.currentUserPage == true)
            {
                <button type="button" value="logout" onclick="location.href='@Url.Action("Edit", "Tweet", new { Id = item.Id })'">Edit</button>
                <button type="button" value="logout" onclick="location.href='@Url.Action("Delete", "Tweet", new { Id = item.Id })'">Delete</button>
            }
            <br />
        }
    </div>
</body>
</html>
